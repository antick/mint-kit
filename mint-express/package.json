{
  "name": "mint-express",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon src/main.js",
    "test": "npm run lint && jest -i --coverage",
    "start:prod": "pm2 start ecosystem.config.js --no-daemon",
    "test:watch": "jest --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "docker": "docker-compose -f docker-compose.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "lint": "eslint ./src/ --ignore-path .gitignore",
    "lint:fix": "pnpm lint --fix",
    "lint:watch": "pnpm lint --watch",
    "install:clean": "rm -rf node_modules/ && rm -rf pnpm-lock.yaml && pnpm install"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "debug": "4.3.4",
    "dotenv": "16.3.1",
    "express": "4.19.2",
    "express-mongo-sanitize": "2.2.0",
    "express-rate-limit": "7.1.5",
    "helmet": "7.1.0",
    "http-status": "1.7.3",
    "jsonwebtoken": "9.0.2",
    "moment": "2.29.4",
    "mongodb": "6.3.0",
    "mongoose": "8.0.2",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "nodemailer": "6.9.9",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pm2": "5.3.0",
    "validator": "13.11.0",
    "winston": "3.11.0",
    "xss-clean": "0.1.4",
    "joi": "17.11.0",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "coveralls": "3.1.1",
    "@faker-js/faker": "8.3.1",
    "husky": "8.0.3",
    "lint-staged": "15.1.0",
    "node-mocks-http": "1.13.0",
    "nodemon": "3.0.2",
    "supertest": "6.3.3",
    "@babel/eslint-parser": "7.23.3",
    "eslint": "8.55.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-security": "1.7.1",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0"
  }
}
