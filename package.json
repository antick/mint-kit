{
  "name": "mint-kit",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/antick/mint-kit.git",
  "homepage": "https://github.com/antick/mint-kit",
  "author": "Pankaj Sanam",
  "description": "A starter kit/boilerplate for all your full-stack apps",
  "keywords": [
    "mint",
    "mint express",
    "boilerplate",
    "mern",
    "node",
    "nodejs",
    "express",
    "api",
    "backend",
    "monorepo",
    "nx"
  ],
  "scripts": {
    "start": "nx run-many --parallel --target=serve --projects=mint-express,pumpkin-web --maxParallel=10",
    "start:docusaurus": "nx serve mint-docusaurus",
    "start:express": "nx serve mint-express",
    "build": "nx build",
    "test": "nx test",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "docker": "docker-compose -f docker-compose.yml up",
    "lint": "eslint ./src/ --ignore-path .gitignore",
    "lint:fix": "pnpm run lint --fix",
    "lint:watch": "pnpm run lint --watch",
    "install:clean": "rm -rf node_modules/ && rm -rf pnpm-lock.yaml && pnpm install"
  },
  "dependencies": {
    "dotenv": "10.0.0",
    "joi": "17.6.0",
    "lodash": "4.17.21",
    "moment": "2.29.4"
  },
  "devDependencies": {
    "eslint": "8.22.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.0.1",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-security": "1.5.0",
    "jest": "28.1.3",
    "jest-environment-jsdom": "28.1.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
