{
  "name": "mint-express",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon src/main.js",
    "test": "npm run lint && jest -i --coverage",
    "start:prod": "pm2 start ecosystem.config.js --no-daemon",
    "test:watch": "jest --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "docker": "docker-compose -f docker-compose.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "lint": "eslint ./src/ --ignore-path .gitignore",
    "lint:fix": "npm run lint --fix",
    "lint:watch": "npm run lint --watch",
    "install:clean": "rm -rf node_modules/ && rm -rf package-lock.json && npm install"
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "debug": "4.3.4",
    "dotenv": "10.0.0",
    "express": "4.18.2",
    "express-mongo-sanitize": "2.2.0",
    "express-rate-limit": "5.5.1",
    "helmet": "^4.6.0",
    "http-status": "1.5.3",
    "jsonwebtoken": "8.5.1",
    "moment": "2.29.4",
    "mongodb": "4.10.0",
    "mongoose": "6.6.5",
    "morgan": "1.10.0",
    "multer": "1.4.4",
    "nodemailer": "6.8.0",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "pm2": "5.2.2",
    "validator": "13.7.0",
    "winston": "3.8.2",
    "xss-clean": "0.1.1"
  },
  "devDependencies": {
    "coveralls": "3.1.1",
    "faker": "5.5.3",
    "husky": "7.0.4",
    "lint-staged": "11.2.6",
    "node-mocks-http": "1.11.0",
    "nodemon": "2.0.20",
    "supertest": "6.3.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
